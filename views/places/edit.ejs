<div class="container siteForm">
  <h3>Edit</h3>
  <form method="POST" action="/places/<%= place.id %>">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" value="<%= place.name %>" class="form-control">
    </div>
    <div class="form-group">
      <label for="region">Region</label>
      <select name="region" id="region" value="<%= place.region %>" class="form-control">
        <option value="location" selected disabled="">Choose a location</option>
        <option value="North East">North East</option>
        <option value="North West">North West</option>
        <option value="Yorkshire">Yorkshire</option>
        <option value="East Midlands">East Midlands</option>
        <option value="West Midlands">West Midlands</option>
        <option value="London">London</option>
        <option value="East England">East England</option>
        <option value="South East">South East</option>
        <option value="South West">South West</option>
        <option value="Wales">Wales</option>
      </select>
    </div>
    <div class="form-group">
      <label for="licence">Licence required?</label>
      <select name="licence" id="licence" value="<%= place.licence %>" class="form-control">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
      </select>
    </div>
    <div class="form-group">
      <label for="rating">Rating</label>
      <select name="rating" id="rating" value="<%= place.rating %>" class="form-control">
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
      </select>
    </div>
    <div class="form-group">
      <label for="keywords">Keywords</label>
      <input type="text" name="keywords" id="keywords" value="<%= place.keywords %>" class="form-control">
    </div>
    <div class="form-group">
      <label for="price">Price (if applicable)</label>
      <input type="number" name="price" id="price" value="<%= place.price %>" class="form-control">
    </div>
    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" name="address" id="address" class="autocomplete form-control" value="<%= place.address %>">
      <input type="hidden" name = "lat" id="lat" value="<%= place.lat %>">
      <input type="hidden" name = "lng" id="lng" value="<%= place.lng %>">
    </div>
    <div class="form-group">
      <label for="postCode">Post Code</label>
      <input type="text" name="postCode" id="postCode" value="<%= place.postCode %>" class="form-control">
    </div>
    <div class="form-group">
      <label for="telephone">Telephone Number</label>
      <input type="text" name="telephone" id="telephone" value="<%=place.telephone %>" class="form-control">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input type="textarea" name="description" id="description" value="<%= place.description %>" class="form-control">
    </div>
    <button class="btn btn-success">Update Location</button>
  </form>
</div>
