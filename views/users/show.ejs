<div class="container">
  <h1><%= thisUser.username %></h1>
  <img src= "<%= thisUser.imageSRC %>" alt="<%= thisUser.username %>">
  <p><%= thisUser.bio %></p>
</div>




<div class="container">
  <h2> Gallery</h2>
  <% if(locals.isAuthenticated && (thisUser.id == user.id)) { %>
    <form method="POST" action="/users/<%= thisUser.id %>/images" enctype="multipart/form-data">
      <div>
        <label for="picture">Image file</label>
        <input type="file" name="picture" id="picture">
      </div>
      <div>
        <label for="caption">Caption</label>
        <textarea name="caption" id="caption"></textarea>
      </div>
      <button>Add</button>
    </form>
  <% } %>

  <div class="feed">
    <% thisUser.pics.forEach((image) => { %>
      <img src="<%= image.src %>" alt="<%= image.caption %>">
      <p><%= image.caption %></p>
      <% if(locals.isAuthenticated && (thisUser.id == user.id)) { %>
        <form method="POST" action="/users/<%=thisUser.id%>/images/<%=image.id%>">
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn btn-danger">Delete</button>
        </form>
      <% } %>
    <% }) %>
  </div>
</div>




<div class="container">
  <% if(locals.isAuthenticated && (thisUser.id == user.id)) { %>
    <div class="container">


      <a href="/users/<%= thisUser.id %>/edit" class="btn btn-success">Edit</a>
      <form method="POST" action="/profile">
        <input type="hidden" name="_method" value="DELETE">
        <button>Delete Account</button>
      </form>
    </div>
  <% } %>
</div>
